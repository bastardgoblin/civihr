<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/HRLeaveAndAbsences</base>
  <class>LeaveBalance</class>
  <name>civicrm_hrleaveandabsences_leave_balance</name>
  <comment>The balance for a specific set of absence period, contract and absence type</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Leave Balance ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>period_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to AbsencePeriod</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>period_id</name>
    <table>civicrm_hrleaveandabsences_absence_period</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>type_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to AbsenceType</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>type_id</name>
    <table>civicrm_hrleaveandabsences_absence_type</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contract_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to HRJobContract</comment>
    <add>4.4</add>
  </field>

  <field>
    <name>overridden</name>
    <type>boolean</type>
    <default>false</default>
    <comment>Indicates if this balance's entitlement was overridden</comment>
    <add>4.4</add>
  </field>

  <field>
    <name>comment</name>
    <type>text</type>
    <length>400</length>
    <comment>The comment added by the user about the calculation for this balance's entitlement</comment>
    <add>4.4</add>
  </field>

  <field>
    <name>comment_author_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact. The contact that represents the user who added the comment to this balance's entitlement</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>comment_author_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>comment_date</name>
    <type>datetime</type>
    <comment>The date and time the comment for this balance's entitlement was added/updated</comment>
    <add>4.4</add>
  </field>

  <index>
    <name>unique_balance</name>
    <fieldName>period_id</fieldName>
    <fieldName>contract_id</fieldName>
    <fieldName>type_id</fieldName>
    <unique>true</unique>
    <add>4.4</add>
  </index>

</table>
